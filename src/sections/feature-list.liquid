<div class="section bg-primary-bg color-scheme__{{ section.settings.color_scheme }} ">
  <section class="grid text-primary-text lg:grid-cols-[1fr_2fr]">
    <div>
      <div class="aspect-w-1 aspect-h-1">
        {% if section.settings.image != blank %}
          {%- capture sizes -%}
        (min-width: 1024px) calc(100vw * 0.33),
        100vw
        {%- endcapture -%}
          {{
            section.settings.image
            | image_url: width: section.settings.image.width
            | image_tag:
              loading: 'lazy',
              sizes: sizes,
              widths: '30, 60, 90, 120, 150, 180, 210, 240, 270, 300, 330, 410, 490, 570, 650, 730, 810, 890, 970, 1050',
              class: 'object-cover rounded bg-secondary-bg'
          }}
        {% else %}
          {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg rounded' }}
        {% endif %}
      </div>
    </div>

    <div class="flex h-full w-full items-center justify-center py-4 lg:px-4">
      <div class="grid h-fit gap-4 lg:grid-cols-2">
        {% for block in section.blocks %}
          {% assign this = block.settings %}
          {% if this.title != blank and this.description != blank %}
            <div class="py-4 px-6">
              {% if this.custom_icon != blank %}
                {% capture widths %}{{ this.icon_size }}{% endcapture %}
                {% assign sizes = this.icon_size | append: 'px' %}
                {% capture styles %}height:{{ this.icon_size }}px; margin-bottom:{{ this.icon_size | divided_by: 3 }}px;{% endcapture %}
                {{-
                  this.custom_icon
                  | image_url: width: this.icon_size
                  | image_tag: sizes: sizes, widths: widths, style: styles
                -}}
              {% else %}
                {% unless this.icon == 'none' %}
                  <span
                    class="block"
                    style="width:{{ this.icon_size }}px; height: {{ this.icon_size }}px; margin-bottom:{{ this.icon_size | divided_by: 3 }}px;"
                  >
                    {% render 'customizer-icons', icon: this.icon %}
                  </span>
                {% endunless %}
              {% endif %}
              <h3 class="mt-0">{{ this.title }}</h3>
              <div class="rte">
                {{ this.description }}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>
</div>
