{%- if paginate.parts.size > 0 -%}
  <nav
    class="grid place-content-center"
    role="navigation"
    aria-label="{{ 'accessibility.pagination.title' | t }}"
  >
    <ul class="flex gap-2" role="list">
      {%- if paginate.previous -%}
        <li>
          <a
            href="{{ paginate.previous.url }}{{ anchor }}"
            class="flex h-8 w-8 items-center justify-center rounded-sm border border-transparent bg-secondary-bg hover:border-primary-text"
            aria-label="{{ 'accessibility.pagination.previous_button_label' | t }}"
          >
            <span class="block h-6 w-6">
              {% render 'icons', icon: 'chevron-left' %}
            </span>
          </a>
        </li>
      {%- endif -%}

      {%- for part in paginate.parts -%}
        <li>
          {%- if part.is_link -%}
            <a
              href="{{ part.url }}{{ anchor }}"
              class="flex h-8 w-8 items-center justify-center rounded-sm border border-transparent bg-secondary-bg hover:border-primary-text"
              aria-label="{{ 'accessibility.pagination.page_label' | t: number: part.title }}"
            >
              {{- part.title -}}
            </a>
          {%- else -%}
            {%- if part.title == paginate.current_page -%}
              <a
                role="link"
                aria-disabled="true"
                class="flex h-8 w-8 items-center justify-center rounded-sm bg-accent-2-bg"
                aria-current="page"
                aria-label="{{ 'accessibility.pagination.page_label' | t: number: part.title }}"
              >
                {{- part.title -}}
              </a>
            {%- else -%}
              <span class="flex h-8 w-8 items-center justify-center">
                {{- part.title -}}
              </span>
            {%- endif -%}
          {%- endif -%}
        </li>
      {%- endfor -%}

      {%- if paginate.next -%}
        <li>
          <a
            href="{{ paginate.next.url }}{{ anchor }}"
            class="flex h-8 w-8 items-center justify-center rounded-sm border border-transparent bg-secondary-bg hover:border-primary-text"
            aria-label="{{ 'accessibility.pagination.next_button_label' | t }}"
          >
            <span class="block h-6 w-6">
              {% render 'icons', icon: 'chevron-right' %}
            </span>
          </a>
        </li>
      {%- endif -%}
    </ul>
  </nav>
{%- endif -%}
